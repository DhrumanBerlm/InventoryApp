<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_background" />

    <Button
        style="@style/DarkBG"
        android:id="@+id/viewConsumablesBtn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:text="View Consumables"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/SaveBtn"
        style="@style/DarkBG"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:text="Save Data"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="@style/DarkBG"
        android:id="@+id/viewValuablesBtn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="View Valuables"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/viewConsumablesBtn"
        app:layout_constraintTop_toBottomOf="@+id/viewConsumablesBtn" />

    <Button
        style="@style/DarkBG"
        android:id="@+id/addItemBtn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Add Item"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/viewValuablesBtn"
        app:layout_constraintTop_toBottomOf="@+id/viewValuablesBtn" />

    <Button
        style="@style/DarkBG"
        android:id="@+id/giveItemBtn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Give Item"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/addItemBtn"
        app:layout_constraintTop_toBottomOf="@+id/addItemBtn" />

    <Button
        style="@style/DarkBG"
        android:id="@+id/viewTransactionHistory"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Transaction History"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/giveItemBtn"
        app:layout_constraintTop_toBottomOf="@+id/giveItemBtn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginBottom="10dp"
        android:alpha="1"
        android:text="~Made By Berlm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:text="The Inventory App"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="50sp"
        app:fontFamily="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>